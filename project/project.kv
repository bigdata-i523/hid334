#:kivy 1.10.0
<NewsLabel@Label>:
	color: [0,0,0,1]

<ForecastBoxLayout@BoxLayout>:
	orientation: 'vertical'
	size_hint_y: 1

<NewsLabelTitle@Label>:
	text_size: self.size
	halign: 'left'
	font_size: 13
	bold: True
	color: [0.106, 0.106, 0.118, 1]
<NewsLabelStory@Label>:
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
	font_size: 11
	color: [0.106, 0.106, 0.118, .9]

<WeatherForecastDay@Label>:
    text_size: self.size
	valign: 'top'
	halign: 'center'
	bold: True
	color: [0.663, 0.737, 0.816, 1]

<WeatherForecastHiLo@Label>:
	font_size: 12
	color: [0.663, 0.737, 0.816, 0.8]

<WeatherForecastImage@Image>:
	size_hint_y: None
	height: "50dp"

<TransitAlert@Label>:
	color: [0,0,0,1]
	font_size: 12
	text_size: self.size
	halign: 'left'

<WeatherWidget>:
    canvas.before:
        Color:
            rgba: [1, 1, 1, 1]
		Rectangle:
			pos: self.pos
			size: self.size
    cols: 1
    BoxLayout:
        size_hint_y: None
        BoxLayout:
            size_hint_y: None
            orientation: "vertical"
            Image: 
            	source: 'sunny.png' #This needs to be a dictionary
            	keep_ratio: False
            	halign: 'center'
            	size_hint_y: None
            	height: "60dp"
            Label:
                text: root.current_temperature()[:3] 
                bold: True
                font_size: 25
                color: [0.216, 0.247, 0.318, 1]
			Label:
                text: root.high_low_temp(0)
                size_hint: (1,0.5)
                font_size: 15
                color: [0.216, 0.247, 0.318, .75]
	    ForecastBoxLayout:
			WeatherForecastDay: 
	        	text: root.forecast_day(1)
	    	WeatherForecastImage: 
	    		source: 'sunny.png'
			WeatherForecastHiLo: 
	        	text: root.high_low_temp(1)
	    ForecastBoxLayout:
			WeatherForecastDay: 
	        	text: root.forecast_day(2)
	    	WeatherForecastImage: 
	    		source: 'sunny.png'
	        WeatherForecastHiLo: 
	        	text: root.high_low_temp(2)
	    ForecastBoxLayout:
			WeatherForecastDay: 
	        	text: root.forecast_day(3)
	    	WeatherForecastImage: 
	    		source: 'sunny.png'
	        WeatherForecastHiLo: 
	        	text: root.high_low_temp(3)
	    ForecastBoxLayout:
			WeatherForecastDay: 
	        	text: root.forecast_day(4)
	    	WeatherForecastImage: 
	    		source: 'sunny.png'
	        WeatherForecastHiLo: 
	        	text: root.high_low_temp(4)
		ForecastBoxLayout:
			WeatherForecastDay: 
	        	text: root.forecast_day(5)
	    	WeatherForecastImage: 
	    		source: 'sunny.png'
	        WeatherForecastHiLo: 
	        	text: root.high_low_temp(5)
		BoxLayout:
			size_hint_y: None
			BoxLayout:
	        	orientation: 'vertical'
	            Label:
	                text: root.TimeHours + ':' + root.TimeMinutes
	                size_hint_x: 1
	                font_size: 35
	                size: self.size
	                bold: True
	                color: [0.345, 0.643, 0.69 ,1]
	            Label:
	                text: root.current_date()
	                size_hint_x: 1
	                font_size: 15
	                bold: True
	                color: [0.345, 0.643, 0.69,1]
				Label:
	                text: root.sunrise()
	                font_size: 10
	                color: [0.345, 0.643, 0.69, .9]
	                text_size: self.size
	                valign: 'bottom'
	                halign: 'center'
				Label:
	                text: root.sunset()
	                font_size: 10
	                color: [0.345, 0.643, 0.69, .9]
	                text_size: self.size
	                valign: 'top'
	                halign: 'center'
	BoxLayout:
		orientation: 'vertical'
		size_hint: (1, 0.15)
		Label: 
			text: root.quote_of_the_day()
			color: [0.549, 0.612, 0.678 ,1]
			italic: True
			font_size: 11
	BoxLayout:
		orientation: 'horizontal'
		BoxLayout:
			orientation: 'vertical'
			size_hint: (1,1)
			BoxLayout:
				orientation: 'vertical'	
				NewsLabelTitle: 
					text: root.top_world_news_title(0)
				NewsLabelStory: 
					text: root.top_world_news_story(0)
				NewsLabelTitle: 
					text: root.top_world_news_title(1)
				NewsLabelStory: 
					text: root.top_world_news_story(1)
				NewsLabelTitle: 
					text: root.top_world_news_title(2)
				NewsLabelStory: 
					text: root.top_world_news_story(2)
				NewsLabelTitle: 
					text: root.top_world_news_title(3)
				NewsLabelStory: 
					text: root.top_world_news_story(3)
		BoxLayout:
			orientation: 'vertical'
			NewsLabelTitle: 
				text: root.top_business_title(0)
			NewsLabelStory: 
				text: root.top_business_story(0)
			NewsLabelTitle: 
				text: root.top_business_title(1)
			NewsLabelStory: 
				text: root.top_business_story(1)
			NewsLabelTitle: 
				text: root.top_business_title(2)
			NewsLabelStory: 
				text: root.top_business_story(2)	
			NewsLabelTitle: 
				text: root.top_business_title(3)
			NewsLabelStory: 
				text: root.top_business_story(3)
	BoxLayout:
		size_hint: (1, .3)
		Label:
			text: 'Test'	
