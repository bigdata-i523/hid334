#:kivy 1.10.0
<NewsLabel@Label>:
	color: [0,0,0,1]

<ForecastBoxLayout@BoxLayout>:
	orientation: 'vertical'
	size_hint_y: 0.75

<NewsLabelTitle@Label>:
	text_size: self.size
	halign: 'left'
	font_size: 13
	bold: True
	color: [0,0,0,1]

<NewsLabelStory@Label>:
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
	font_size: 11
	color: [0,0,0,.6]

<WeatherForecastDay@Label>:
	color: [159, 171, 183, 1]

<WeatherForecastHiLo@Label>:
	font_size: 12
	color: [61, 106, 148, 1]

<TransitAlert@Label>:
	color: [0,0,0,1]
	font_size: 12
	text_size: self.size
	halign: 'left'


<WeatherWidget>:
    canvas.before:
        Color:
            rgba: [1, 1, 1, 1]
		Rectangle:
			pos: self.pos
			size: self.size
    cols: 1
    BoxLayout:
        size_hint_y: None
        BoxLayout:
            size_hint: (1.5,1)
            orientation: "vertical"
            Image: 
            	source: 'sunny.png' #This needs to be a dictionary
            	keep_ratio: False
            	halign: 'center'
            Button:
                text: root.current_temperature()[:3] 
                bold: True
                font_size: 40
                color: [0,0,0,1]
			Button:
                text: root.high_low_temp(0)
                size_hint: (1,0.5)
                font_size: 15
                color: [1,255,1,1]
            Button:
                text: root.get_location()
                font_size: 15
                color: [1,1,1,1]
                bold: True
	    ForecastBoxLayout:
			WeatherForecastDay: 
	        	text: root.forecast_day(1)
	    	Image: 
	    		source: 'sunny.png'
			WeatherForecastHiLo: 
	        	text: root.high_low_temp(1)
	    ForecastBoxLayout:
			WeatherForecastDay: 
	        	text: root.forecast_day(2)
	    	Image: 
	    		source: 'sunny.png'
	        WeatherForecastHiLo: 
	        	text: root.high_low_temp(2)
	    ForecastBoxLayout:
			WeatherForecastDay: 
	        	text: root.forecast_day(3)
	    	Image: 
	    		source: 'sunny.png'
	        WeatherForecastHiLo: 
	        	text: root.high_low_temp(3)
	    ForecastBoxLayout:
			WeatherForecastDay: 
	        	text: root.forecast_day(4)
	    	Image: 
	    		source: 'sunny.png'
	        WeatherForecastHiLo: 
	        	text: root.high_low_temp(4)
		ForecastBoxLayout:
			WeatherForecastDay: 
	        	text: root.forecast_day(5)
	    	Image: 
	    		source: 'sunny.png'
	        WeatherForecastHiLo: 
	        	text: root.high_low_temp(5)
		BoxLayout:
			size_hint_y: None
			BoxLayout:
	        	orientation: 'vertical'
	            Label:
	                text: root.TimeHours + ':' + root.TimeMinutes
	                size_hint_x: 1
	                font_size: 40
	                size: self.size
	                bold: True
	                color: [0,0,0,1]
	            Label:
	                text: root.current_date()
	                size_hint_x: 1
	                font_size: 15
	                bold: True
	                color: [0,0,0,1]
				Button:
	                text: root.sunrise()
	                font_size: 10
	                color: [0,0,0,1]
				Button:
	                text: root.sunset()
	                font_size: 10
	                color: [0,0,0,1]
	BoxLayout:
		orientation: 'vertical'
		size_hint: (1, 0.15)
		Button: 
			text: root.quote_of_the_day()
			color: [0,0,0,1]
			italic: True
			font_size: 11
	BoxLayout:
		orientation: 'horizontal'
		BoxLayout:
			orientation: 'vertical'
			size_hint: (1,1)
			BoxLayout:
				orientation: 'vertical'
				NewsLabelTitle: 
					text: root.top_world_news_title(0)
				NewsLabelStory: 
					text: root.top_world_news_story(0)
				NewsLabelTitle: 
					text: root.top_world_news_title(1)
				NewsLabelStory: 
					text: root.top_world_news_story(1)
				NewsLabelTitle: 
					text: root.top_world_news_title(2)
				NewsLabelStory: 
					text: root.top_world_news_story(2)
				NewsLabelTitle: 
					text: root.top_world_news_title(3)
				NewsLabelStory: 
					text: root.top_world_news_story(3)
		BoxLayout:
			orientation: 'vertical'
			NewsLabelTitle: 
				text: root.top_business_title(0)
			NewsLabelStory: 
				text: root.top_business_story(0)
			NewsLabelTitle: 
				text: root.top_business_title(1)
			NewsLabelStory: 
				text: root.top_business_story(1)
			NewsLabelTitle: 
				text: root.top_business_title(2)
			NewsLabelStory: 
				text: root.top_business_story(2)	
			NewsLabelTitle: 
				text: root.top_business_title(3)
			NewsLabelStory: 
				text: root.top_business_story(3)
	BoxLayout:
		orientation: 'vertical'
		size_hint: (1, 1)
		TransitAlert: 
			text: root.transit_alerts(0)
		TransitAlert: 
			text: root.transit_alerts(1)
		TransitAlert: 
			text: root.transit_alerts(2)
		BoxLayout:
			text: 'test'
