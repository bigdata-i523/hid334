#:kivy 1.10.0
<WeatherWidget>:
    cols: 1
    BoxLayout:
        size_hint_y: None
        Label:
            text: root.printing_test()
            size_hint_x: 1
        Label:
            text: 'Tomorrow'
            size_hint_x: 0.25
        Label:
            text: 'T+2'
            size_hint_x: 0.25
        Label:
            text: 'T+3'
            size_hint_x: 0.25
        Label:
            text: 'T+4'
            size_hint_x: 0.25
        Label:
            text: 'T+5'
            size_hint_x: 0.25
        BoxLayout:
            Label:
                text: root.TimeHours + ':' + root.TimeMinutes
                size_hint_x: 1
                font_size: 30
                bold: True
    BoxLayout:
        Label: 
            text: 'Another area'
        Label: 
            text: 'Here too'
